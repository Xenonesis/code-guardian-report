rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to create and manage analysis results
    match /analysisResults/{analysisId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow authenticated users to manage their user statistics
    match /userStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to manage their settings
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy: Keep old analysis history for backward compatibility
    match /analysisHistory/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Push notification subscriptions - users can only manage their own
    match /pushSubscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Analytics data - users can only read their own, write requires validation
    match /analytics/{analyticsId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.keys().hasAll(['userId', 'event', 'timestamp']);
    }
    
    // Shared/public resources (read-only for authenticated users)
    match /publicResources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin-only via Firebase Admin SDK
    }
    
    // GitHub repositories - allow read without auth for public access
    match /github_repositories/{repoId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // GitHub analysis - allow read without auth for public access
    match /github_analyses/{analysisId} {
      allow read: if true;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Deny all other access by default (security best practice)
    match /{document=**} {
      allow read, write: if false;
    }
 }
}
