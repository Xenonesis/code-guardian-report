{
  "name": "code-guardian-report",
  "private": true,
  "version": "13.0.0",
  "description": "Code analysis tool with security scanning and metrics reporting",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:prod": "npm run clean && npm run lint && npm run type-check && next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p ${PORT:-3000}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write .",
    "lint:strict": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf .next node_modules/.cache dist out",
    "clean:all": "rimraf .next node_modules/.cache dist out .turbo",
    "postbuild": "echo 'Build completed successfully!'",
    "prepare": "node -e \"if (!process.env.CI && !process.env.VERCEL) try { require('child_process').execSync('husky', { stdio: 'inherit' }) } catch (e) {}\"",
    "update-contributors": "node scripts/update-contributors.js",
    "setup-git-hooks": "node scripts/setup-git-hooks.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test-automation": "node scripts/test-automation.js",
    "test:e2e-zip": "tsx scripts/e2e-zip-analysis.ts",
    "test:multi-language": "tsx src/tests/multiLanguageAnalysis.test.ts",
    "test:multi-language-auto": "node scripts/run-multi-language-tests.js",
    "ci:multi-language-check": "node scripts/ci-multi-language-check.js",
    "ci:validate": "npm run lint:strict && npm run type-check && npm run test",
    "ci:build": "npm run ci:validate && npm run build",
    "docker:build": "docker build -t code-guardian:latest .",
    "docker:run": "docker run -p 3000:3000 code-guardian:latest",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "node scripts/no-emoji-check.cjs",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "node scripts/no-emoji-check.cjs",
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,sh,html,xml}": [
      "node scripts/no-emoji-check.cjs",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@babel/types": "^7.28.6",
    "@lezer/cpp": "^1.1.5",
    "@lezer/java": "^1.1.3",
    "@lezer/python": "^1.1.18",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@serwist/next": "^9.5.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/babel__traverse": "^7.20.6",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esprima": "^4.0.1",
    "esquery": "^1.7.0",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.29.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "jszip": "^3.10.1",
    "lenis": "^1.3.17",
    "lucide-react": "^0.563.0",
    "next": "^16.1.5",
    "next-nprogress-bar": "^2.4.7",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "serwist": "^9.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "web-push": "^3.6.7",
    "web-tree-sitter": "^0.26.3",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.3.9",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "fast-xml-parser": ">=5.3.4"
  }
}
