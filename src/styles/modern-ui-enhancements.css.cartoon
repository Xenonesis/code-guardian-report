/* Modern UI Enhancements for Code Guardian */

@layer components {
  /* Enhanced Interactive Elements */
  .interactive-card {
    @apply relative cursor-pointer overflow-hidden transition-all duration-700 ease-out;

    background: linear-gradient(
      135deg,
      rgb(255 255 255 / 10%) 0%,
      rgb(255 255 255 / 5%) 100%
    );
  }

  .interactive-card::before {
    content: "";

    @apply absolute inset-0 bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-pink-500/10 opacity-0 transition-opacity duration-700;
  }

  .interactive-card:hover {
    @apply -translate-y-4 scale-[1.05] transform shadow-[0_35px_60px_-12px_rgba(0,0,0,0.35)];
  }

  .interactive-card:hover::before {
    @apply opacity-100;
  }

  .interactive-card:active {
    @apply -translate-y-2 scale-[1.03] transform shadow-2xl;
  }

  /* Enhanced Gradient Text Effects */
  .gradient-text-blue {
    background: linear-gradient(135deg, #3b82f6 0%, #6366f1 50%, #8b5cf6 100%);
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientFlow 4s ease infinite;
  }

  .gradient-text-purple {
    background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 50%, #ec4899 100%);
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientFlow 4s ease infinite;
  }

  .gradient-text-green {
    background: linear-gradient(135deg, #10b981 0%, #059669 50%, #0d9488 100%);
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientFlow 4s ease infinite;
  }

  .gradient-text-orange {
    background: linear-gradient(135deg, #f97316 0%, #ea580c 50%, #dc2626 100%);
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    animation: gradientFlow 4s ease infinite;
  }

  .gradient-text-rainbow {
    background: linear-gradient(
      135deg,
      #3b82f6 0%,
      #8b5cf6 25%,
      #ec4899 50%,
      #f97316 75%,
      #10b981 100%
    );
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 300% 300%;
    animation: gradientFlow 6s ease infinite;
  }

  /* Modern Grid Background */
  .bg-grid-slate-100 {
    background-image:
      linear-gradient(rgb(148 163 184 / 10%) 1px, transparent 1px),
      linear-gradient(90deg, rgb(148 163 184 / 10%) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  .bg-grid-slate-800 {
    background-image:
      linear-gradient(rgb(71 85 105 / 10%) 1px, transparent 1px),
      linear-gradient(90deg, rgb(71 85 105 / 10%) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  /* Enhanced Card Variants */
  .card-modern-elevated {
    @apply rounded-3xl border-0 bg-white/95 p-8 backdrop-blur-xl transition-all duration-700 dark:bg-slate-800/95;

    background-image: linear-gradient(
      135deg,
      rgb(255 255 255 / 10%) 0%,
      rgb(255 255 255 / 5%) 100%
    );
    box-shadow:
      0 25px 50px -12px rgb(0 0 0 / 25%),
      0 0 0 1px rgb(255 255 255 / 5%);
  }

  .card-modern-elevated:hover {
    @apply -translate-y-5 scale-[1.04] transform;

    background-image: linear-gradient(
      135deg,
      rgb(255 255 255 / 15%) 0%,
      rgb(255 255 255 / 8%) 100%
    );
    box-shadow:
      0 45px 80px -12px rgb(0 0 0 / 40%),
      0 0 0 1px rgb(255 255 255 / 15%);
  }

  .card-glass-modern {
    @apply rounded-3xl border border-white/20 bg-white/10 shadow-2xl backdrop-blur-3xl transition-all duration-500 dark:border-white/10 dark:bg-black/10;
  }

  .card-glass-modern:hover {
    @apply border-white/30 bg-white/15 shadow-[0_35px_60px_-12px_rgba(0,0,0,0.35)] dark:border-white/20 dark:bg-black/15;
  }

  /* Enhanced Modern Button Variants */
  .btn-modern-primary {
    @apply relative transform overflow-hidden rounded-3xl px-10 py-5 font-semibold text-white shadow-2xl transition-all duration-500 hover:scale-110 focus:scale-110;

    background: linear-gradient(
      135deg,
      #3b82f6 0%,
      #8b5cf6 25%,
      #ec4899 50%,
      #f97316 75%,
      #10b981 100%
    );
    background-size: 300% 300%;
    animation: gradientFlow 8s ease infinite;
  }

  .btn-modern-primary::before {
    content: "";

    @apply absolute inset-0 opacity-0 transition-opacity duration-500;

    background: linear-gradient(
      135deg,
      #1d4ed8 0%,
      #7c3aed 25%,
      #db2777 50%,
      #ea580c 75%,
      #059669 100%
    );
    background-size: 300% 300%;
    animation: gradientFlow 4s ease infinite;
  }

  .btn-modern-primary:hover::before {
    @apply opacity-100;
  }

  .btn-modern-secondary {
    @apply transform rounded-3xl border-2 border-white/30 bg-white/10 px-10 py-5 font-semibold text-slate-900 shadow-2xl backdrop-blur-2xl transition-all duration-500 hover:scale-110 hover:border-white/50 hover:bg-white/20 dark:border-white/20 dark:bg-black/10 dark:text-white dark:hover:border-white/30 dark:hover:bg-black/20;
  }

  .btn-modern-glass {
    @apply transform rounded-3xl border border-white/10 bg-white/5 px-10 py-5 font-semibold text-slate-700 shadow-2xl backdrop-blur-3xl transition-all duration-500 hover:scale-110 hover:bg-white/10 dark:border-white/5 dark:bg-black/5 dark:text-slate-300 dark:hover:bg-black/10;
  }

  /* Enhanced Metrics Display */
  .metrics-card-modern {
    @apply rounded-2xl border-0 bg-gradient-to-br from-white to-slate-50 p-6 shadow-xl transition-all duration-500 hover:-translate-y-1 hover:shadow-2xl dark:from-slate-800 dark:to-slate-900;
  }

  .metrics-value-large {
    @apply bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-4xl font-bold text-transparent;
  }

  /* Modern Navigation Enhancements */
  .nav-modern {
    @apply border-b border-white/20 bg-white/90 shadow-2xl backdrop-blur-2xl dark:border-slate-700/50 dark:bg-slate-900/90;
  }

  .nav-item-modern {
    @apply relative rounded-xl px-4 py-2 font-medium transition-all duration-300 hover:bg-white/50 dark:hover:bg-white/10;
  }

  .nav-item-modern::before {
    content: "";

    @apply absolute inset-0 rounded-xl bg-gradient-to-r from-blue-500/10 to-indigo-500/10 opacity-0 transition-opacity duration-300;
  }

  .nav-item-modern:hover::before {
    @apply opacity-100;
  }

  /* Enhanced Form Elements */
  .input-modern {
    @apply rounded-xl border border-slate-200 bg-white/50 px-4 py-3 text-slate-900 placeholder-slate-500 backdrop-blur-sm transition-all duration-300 focus:border-transparent focus:ring-2 focus:ring-blue-500 dark:border-slate-700 dark:bg-slate-800/50 dark:text-white dark:placeholder-slate-400;
  }

  .input-modern:focus {
    @apply bg-white shadow-xl dark:bg-slate-800;
  }

  /* Simplified Loading States */
  .loading-modern {
    @apply animate-pulse rounded-2xl bg-gradient-to-r from-slate-200 via-slate-300 to-slate-200 dark:from-slate-700 dark:via-slate-600 dark:to-slate-700;

    background-size: 200% 100%;
    animation: shimmer-modern 2s infinite;
  }

  /* Enhanced Status Indicators */
  .status-success-modern {
    @apply rounded-2xl px-4 py-2 text-sm font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105;

    background: linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%);
  }

  .status-warning-modern {
    @apply rounded-2xl px-4 py-2 text-sm font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105;

    background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
  }

  .status-error-modern {
    @apply rounded-2xl px-4 py-2 text-sm font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105;

    background: linear-gradient(135deg, #ef4444 0%, #dc2626 50%, #b91c1c 100%);
  }

  .status-info-modern {
    @apply rounded-2xl px-4 py-2 text-sm font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105;

    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  }

  /* Enhanced Progress Indicators */
  .progress-modern {
    @apply h-4 overflow-hidden rounded-full bg-slate-200/50 shadow-inner backdrop-blur-sm dark:bg-slate-700/50;
  }

  .progress-fill-modern {
    @apply relative h-full overflow-hidden rounded-full shadow-lg transition-all duration-1000 ease-out;

    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
    background-size: 200% 200%;
    animation: gradientFlow 3s ease infinite;
  }

  .progress-fill-modern::after {
    content: "";

    @apply animate-shimmer absolute inset-0 bg-white/20;
  }
}

@layer utilities {
  /* Modern Animation Utilities */
  .animate-shimmer-modern {
    animation: shimmer-modern 2s infinite;
  }

  .animate-glow-pulse {
    animation: glow-pulse 2s ease-in-out infinite;
  }

  .animate-float-gentle {
    animation: float-gentle 4s ease-in-out infinite;
  }

  .animate-scale-bounce {
    animation: scale-bounce 0.6s ease-out;
  }

  /* Modern Hover Effects */
  .hover-glow-blue:hover {
    box-shadow:
      0 0 20px rgb(59 130 246 / 40%),
      0 0 40px rgb(59 130 246 / 20%);
  }

  .hover-glow-purple:hover {
    box-shadow:
      0 0 20px rgb(147 51 234 / 40%),
      0 0 40px rgb(147 51 234 / 20%);
  }

  .hover-glow-green:hover {
    box-shadow:
      0 0 20px rgb(16 185 129 / 40%),
      0 0 40px rgb(16 185 129 / 20%);
  }

  /* Modern Text Effects */
  .text-shimmer {
    background: linear-gradient(90deg, #64748b, #3b82f6, #8b5cf6, #64748b);
    background-size: 200% 100%;
    background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: text-shimmer 3s ease-in-out infinite;
  }
}

/* Modern Keyframes */
@keyframes shimmer-modern {
  0% {
    background-position: -200% 0;
  }

  100% {
    background-position: 200% 0;
  }
}

@keyframes glow-pulse {
  0%,
  100% {
    box-shadow: 0 0 5px rgb(59 130 246 / 30%);
  }

  50% {
    box-shadow:
      0 0 20px rgb(59 130 246 / 60%),
      0 0 30px rgb(59 130 246 / 40%);
  }
}

@keyframes float-gentle {
  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-8px);
  }
}

@keyframes scale-bounce {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.05);
  }

  100% {
    transform: scale(1);
  }
}

@keyframes text-shimmer {
  0% {
    background-position: -200% center;
  }

  100% {
    background-position: 200% center;
  }
}
